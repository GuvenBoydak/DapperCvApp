@model List<CertificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <a asp-action="Save" asp-controller="Certification" class="btn btn-success m-2"> Yeni Setifika Ekle</a>
</div>
<div class="container">
    <div class="row bg-light">
        <div class="col-10 offset-1 ">
            <table class="table table-hover table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Sertifika Bilgisi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int id = 0;
                    }
                    @foreach (CertificationListDto item in Model)
                    {
                        <tr>
                            @{
                                id++;
                            }
                            <td>@id</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Update" asp-controller="Certification" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                <a onclick="return confirm('Silmek istediginizden Eminmisiniz...')" asp-action="Delete" asp-controller="Certification" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>





