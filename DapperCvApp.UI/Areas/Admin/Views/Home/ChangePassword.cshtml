@model AppUserPasswordDto
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-warning">
    <p>
        <span>Uyarı</span> Şifreniz değiştirildikten sonra otomatik çıkış yapılacak!!!
    </p>
</div>

<form asp-action="ChangePassword" method="post">
    <div class="container">
        <div class="row bg-light" >
            <div class="col-md-10 offset-md-1  font-weight-bold text-center pt-4" style="font-size: 20px;">
                <div class="form-group">
                    <input type="hidden" asp-for="Id"/>
                    <label>Yeni  Şifre :</label> 
                    <input type="password" asp-for="Password" class="form-control-sm" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <br />
                    <label class="mt-1">Tekrar Şifre :</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control-sm" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                 <div class="form-group col-12 mt-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

